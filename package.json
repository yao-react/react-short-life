{
  "name": "react-short-alived",
  "version": "0.1.0",
  "author": "赵耀",
  "main": "dist/index.js",
  "module": "dist/react-short-alived.esm.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepublishOnly": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook:start": "start-storybook -p 6006",
    "storybook:build": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/react-short-alived.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-short-alived.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@changesets/cli": "^2.10.3",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/addons": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "husky": "^4.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "size-limit": "^4.6.0",
    "tsdx": "^0.14.0",
    "tslib": "^2.0.1",
    "typescript": "^3.9.7"
  }
}
